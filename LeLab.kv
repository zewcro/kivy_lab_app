WidgetsExample:

<WidgetsExample>:
    cols: 3
    ToggleButton:
        text: "OFF"
        on_state: root.on_toggle_button_state(self)
        size_hint: None, 1
        width: "100dp"
    Button:
        text:'Compter'
        on_press: root.on_button_click()
        disabled: not root.compteur_actif
    Label:
        text: root.my_text
        font_name: 'fonts/Lcd.ttf'
        font_size: '80dp'
        color: 1, 0.5, 1
    Switch: 
        id: mon_switch
        on_active: root.on_switch_active(self)
        size_hint: None, 1
        width: "100dp"
        active: True
    Slider: 
        id : mon_slider
        orientation: "vertical"
        min: 0 
        max: 100
        value: 50
        on_value: root.on_slider_value(self)
        disabled: not mon_switch.active
    BoxLayout: 
        orientation: "vertical"
        Label: 
            text: str(int(mon_slider.value))
        ProgressBar:
            max: 100
            value: mon_slider.value



